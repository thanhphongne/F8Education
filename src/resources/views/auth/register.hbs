<form method="POST" action="/auth/register">
    <div class="form-group">
        <label >Họ tên</label>
        <input type="text" class="form-control" name="name" placeholder="Nhập họ và tên">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Nhập địa chỉ email">
    </div>

    <div class="form-group">
        <label >Số điện thoại</label>
        <input type="text" class="form-control" name="phone" placeholder="Nhập vào số điện thoại của bạn">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Mật khẩu</label>
        <input type="password" class="form-control" name="password" placeholder="Nhập mật khẩu">
    </div>
    <button type="submit" class="btn btn-primary">Đăng Ký</button>
</form>