
<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='{{this.name}}'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}'>
                            <h5 class='card-title'>{{this.name}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <form method='POST' action='/cart' >
                        <input type='hidden' name='courseSlug' value='{{this.slug}}'>
                        <input type='hidden' name='name' value='{{this.name}}'>
                            <button type='submit' class='btn btn-primary'>Đánh dấu khóa học</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
        
    </div>
</div>
